<h1>Burger Chomp!</h1>

<div id="burger-panel">

  <div id="chomped-panel">
    <h2>Burgers waiting to be chomped:</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.chomped}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="chomped" value="true">
              <button type="submit">CHOMP!</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img id="yumm" src="/assets/images/burger.png">

  <div id="chomped-panel">
    <h2>Burgers that have been chomped:</h2>
    <ul>
      {{#each burgers}}
        {{#if this.chomped}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="chomped" value="false">
              <button type="submit">Un-chomp?</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-burger">
  <div id="input">
    <h2>Add a burger:</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button id="add-burger-button" type="submit">Add Burger</button>
    </form>
  </div>
</div>